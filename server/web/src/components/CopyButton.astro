---
interface Props {
  systemName: string;
}

const { systemName } = Astro.props;
---

<button
  class="copy-btn text-[#737373] hover:text-[#d4d4d4] opacity-0 group-hover:opacity-100 transition-opacity"
  data-system-name={systemName}
  title="Copy system name"
>
  <svg
    class="copy-icon"
    width="12"
    height="12"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <rect width="14" height="14" x="8" y="8" rx="2" ry="2" />
    <path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2" />
  </svg>
  <svg
    class="check-icon"
    width="12"
    height="12"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    style="display: none;"
  >
    <path d="M20 6L9 17l-5-5" />
  </svg>
</button>
