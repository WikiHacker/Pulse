---
interface Props {
  value: number;
  warn?: boolean;
}

const { value, warn = false } = Astro.props;
const pct = Math.min(Math.max(value || 0, 0), 100);
---

<div class="flex items-center gap-1.5">
  <span class="text-xs font-medium text-[#f5f5f5] w-10 shrink-0">{value.toFixed(1)}%</span>
  <div class="relative h-3 w-28 shrink-0 overflow-hidden rounded-full bg-[#111]">
    <div 
      class={`absolute inset-y-0 left-0 h-full rounded-full ${warn ? 'bg-amber-500' : 'bg-emerald-500'}`}
      style={`width:${pct}%`}
    ></div>
  </div>
</div>
